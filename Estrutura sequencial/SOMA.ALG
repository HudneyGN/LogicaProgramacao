Algoritmo "soma"

Var
   n1, n2, soma : inteiro
Inicio
      escreva("Digite o primeiro valor: ")
      leia(n1)
      
       escreva("Digite o segundo valor: ")
      leia(n2)
      
      soma <- n1 + n2
      
      escreval("Soma dos valores digitados :")
      escreva("Resultado: ", n1, " + ", n2, " = ", soma)
Fimalgoritmo